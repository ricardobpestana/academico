<h2>Disciplinas</h2>

<table>

	<tr>
		<th>Nome</th>
		<th>Sigla</th>
	</tr>

	<% @disciplinas.each do |disciplina| %>
		<tr>
			<td><%= disciplina.nome %> </td>
			<td><%= disciplina.sigla %> </td>
			<td><%= link_to 'Exibir', action: 'show', id: disciplina %></td>
			<td><%= link_to 'Excluir', disciplina, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
			<td><%= link_to 'Atualizar', action: 'edit', id: disciplina %></td>
		</tr>
	<% end %>

</table>

