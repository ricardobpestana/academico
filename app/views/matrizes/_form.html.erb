<ul>
	<% @matriz.errors.full_messages.each do |msg| %>
		<li><%= msg %> </li>
	<% end %>
</ul>

<br>

<%= form_for @matriz do |f| %>

  <div class="field">
    <% if @matriz.curso %>
			<%= f.hidden_field 'curso_id' %>
		<% else %>
			<%= f.label :curso_id %> <br>
			<%= f.collection_select(:curso_id, Curso.order('nome'), :id, :nome, {:prompt => true}) %>
		<% end %>
  </div>

	<br>

	Per√≠odo: <br> <%= f.text_field :periodo %> <br/>

	<br>

  <div class="field">
    <% if @matriz.disciplina %>
			<%= f.hidden_field 'disciplina_id' %>
		<% else %>
			<%= f.label :disciplina_id %> <br>
			<%= f.collection_select(:disciplina_id, Disciplina.order('nome'), :id, :nome, {:prompt => true}) %>
		<% end %>
  </div>

	<br>

	Quantidade de Aulas Semanais: <br> <%= f.text_field :qtd_aulas_semana %> <br/>

	<br>

  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>

<% end %>
