<table>

	<tr>
		<th>Dia</th>
		<th>Hora</th>
		<th>Disciplina</th>
		<th>Professor</th>
	</tr>

	<% @horarios.each do |horario| %>
		<tr>
			<td><%= horario.dia.dia %> </td>
			<td><%= horario.hora.hora %> </td>
			<td><%= horario.disciplina.nome %> </td>
			<td><%= horario.professor.nome %> </td>
			<td><%= link_to 'Exibir', action: 'show', id: horario %></td>
			<td><%= link_to 'Excluir', horario, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
			<td><%= link_to 'Atualizar', action: 'edit', id: horario %></td>
		</tr>
	<% end %>

</table>

