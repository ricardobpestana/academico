<ul>
	<% @turma.errors.full_messages.each do |msg| %>
		<li><%= msg %> </li>
	<% end %>
</ul>

<br>

<%= form_for @turma do |f| %>

  <div class="field">
    <% if @turma.curso %>
			<%= f.hidden_field 'curso_id' %>
		<% else %>
			<%= f.label :curso_id %> <br>
			<%= f.collection_select(:curso_id, Curso.order('nome'), :id, :nome, {:prompt => true}) %>
		<% end %>
  </div>

	<br>

	Per√≠odo: <br> <%= f.text_field :periodo %> <br/>

	<br>

	Turno: <br> <%= f.text_field :turno %> <br/>

	<br>

	Quantidade de Alunos: <br> <%= f.text_field :qtd_alunos %> <br/>

	<br>

  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>

<% end %>
