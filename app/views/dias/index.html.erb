<h2>Dias da Semana</h2>

<table>

	<tr>
		<th>Dias</th>
	</tr>

	<% @dias.each do |dia| %>
		<tr>
			<td><%= dia.dia %> </td>
			<td><%= link_to 'Exibir', action: 'show', id: dia %></td>
			<td><%= link_to 'Excluir', dia, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
			<td><%= link_to 'Atualizar', action: 'edit', id: dia %></td>
		</tr>
	<% end %>

</table>

