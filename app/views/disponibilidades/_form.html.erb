<ul>
	<% @disponibilidade.errors.full_messages.each do |msg| %>
		<li><%= msg %> </li>
	<% end %>
</ul>

<br>

<%= form_for @disponibilidade do |f| %>

  <div class="field">
    <% if @disponibilidade.professor %>
			<%= f.hidden_field 'professor_id' %>
		<% else %>
			<%= f.label :professor_id %> <br>
			<%= f.collection_select(:professor_id, Professor.order('nome'), :id, :nome, {:prompt => true}) %>
		<% end %>
  </div>

	<br>

  <div class="field">
    <% if @disponibilidade.dia %>
			<%= f.hidden_field 'dia_id' %>
		<% else %>
			<%= f.label :dia_id %> <br>
			<%= f.collection_select(:dia_id, Dia.order('id'), :id, :dia, {:prompt => true}) %>
		<% end %>
  </div>

	<br>

  <div class="field">
    <% if @disponibilidade.hora %>
			<%= f.hidden_field 'hora_id' %>
		<% else %>
			<%= f.label :hora_id %> <br>
			<%= f.collection_select(:hora_id, Hora.order('hora'), :id, :hora, {:prompt => true}) %>
		<% end %>
  </div>

	<br>

  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>

<% end %>
